{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/krmcbride-hook-logger >> $CLAUDE_PROJECT_DIR/.claude/hooks/claude-hooks.log 2>&1"
          }
        ]
      },
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/krmcbride-file-format -cmd \"make fmt-file FILE={FILEPATH}\" -ext \".go\""
          }
        ]
      }
    ]
  }
}
