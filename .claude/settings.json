{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/krmcbride-bash-block -cmd aws -cmd kubectl -cmd 'git push'"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/krmcbride-hook-logger -silent -log=$CLAUDE_PROJECT_DIR/.claude/hooks/claude-hooks.log"
          }
        ]
      },
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/krmcbride-file-format -cmd \"make fmt-file FILE={FILEPATH}\" -ext \".go\""
          }
        ]
      }
    ]
  }
}
